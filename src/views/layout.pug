doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel="stylesheet" , href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="/scripts/bootstrap.min.js")
        script(src="/scripts/jquery-3.5.1.slim.min.js")
    body
        div(class='container-fluid')
            div(class='row')
                div(class='col-sm-2')
                    block sidebar
                        ul(class='sidebar-nav')
                            li
                                a(href='/') #{t('sidebar.home')}
                            li
                                a(href='/books') #{t('sidebar.book')}
                            li
                                a(href='/authors') #{t('sidebar.author')}
                            li
                                a(href='/genres') #{t('sidebar.genre')}
                            li
                                a(href='/bookInstances') #{t('sidebar.book_instance')}
                            li
                                hr
                            li
                                a(href='/authors/create') #{t('sidebar.create_author')}
                            li
                                a(href='/genres/create') #{t('sidebar.create_genre')}
                            li
                                a(href='/books/create') #{t('sidebar.create_book')}
                            li
                                a(href='/bookInstances/create') #{t('sidebar.create_book_instance')}
                            li
                                hr
                            li
                                a(href='?lng=en') #{t('sidebar.english')} | #[a(href='?lng=vi') #{t('sidebar.vietnamese')}]

                div(class='col-sm-10')
                    block content
