extends ../layout

block content 
  h1 #{t('detail.book.genre')} #{genre.name}
  div(class = 'mt-5 ml-5')
    h4 #{t('detail.author.books')}
    if genreBooks.length > 0
      each book in genreBooks
        hr
        a(href=`/books/${book.id}`) #{book.title}
        p #{book.summary}
    else
      p #{t('genre.genreNoBooks')}
    hr
    p
      a(href=`${genre.id}/update`, class="btn btn-warning") #{t('detail.update')}
      a(href=`${genre.id}/delete`, class="btn btn-danger") #{t('detail.delete')}
