extends ../layout

block content
    h1 #{title}
    form(method='POST')
        div.form-group
            label(for='name') #{t('detail.book.genre')}:
            input#name.form-control(
                type='text'
                name='name'
                required
                value=(undefined===genre ? '' : genre.name)
            )
        button.btn.btn-primary(type='submit').mb #{t('detail.submit')}
    if errors
        ul
            for error in errors
                li.mb!= error.msg
